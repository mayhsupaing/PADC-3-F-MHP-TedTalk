<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_talk_speaker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_medium"
    android:layout_marginTop="@dimen/margin_small"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_podcast"
            android:layout_width="match_parent"
            android:layout_height="@dimen/podcast_image_height"
            android:scaleType="fitXY"
            android:src="@drawable/img_dummy_ted_podcasts" />

        <TextView
            android:id="@+id/tv_podcast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_podcast"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableRight="@drawable/ic_more_vert_black_24dp"
            android:text="@string/podcast_title"
            android:textColor="@color/full_black"
            android:textSize="@dimen/text_regular_2x" />

        <TextView
            android:id="@+id/tv_podcast_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_podcast_title"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_below="@id/tv_podcast_title"
            android:text="@string/podcast_description"
            android:lineSpacingMultiplier="1.2"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>